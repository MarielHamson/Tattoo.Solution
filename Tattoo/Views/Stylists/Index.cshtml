@{
  Layout = "_Layout";
}

@using Tattoo.Models;
@model List<Tattoo.Models.Artist>;

<h2>Available Artists:</h2>

@if (@Model.Count == 0)
{
  <h3>No Artists Currently Work Here</h3>
} 

@foreach (Artist Artist in Model)
{
  <li>@Html.ActionLink($"{Artist.FirstName}", "Details", new { id = Artist.ArtistId })</li>
}
<input type="button" class="btn btn-outline-info" value="Sign Up as a Artist!" onclick="location.href='@Url.Action("Create", "Artists")'" />
